<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xue2015.myandroidapp.FamilyTreeActivity">

    <!--<include layout="@layout/qcenter_head" />-->
    <com.example.xue2015.myandroidapp.Titlebar
        android:id="@+id/familyTreeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/familyTreeFrameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--<com.example.xue2015.myandroidapp.draw.DrawView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_gravity="right|bottom"
            >

            <!--<Button-->
                <!--android:layout_width="45dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/cycle_corner_blue"-->
                <!--android:text="-"-->
                <!--android:textSize="20dp"-->
                <!--android:textColor="@color/white"-->
                <!--android:id="@+id/deleteFamilyButton"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--/>-->

            <Button
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cycle_corner_blue"
                android:text="+"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:id="@+id/addFamilyButton"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <RelativeLayout
                android:id="@+id/main_page_bottom_button_mainpage"
                style="@style/main_page_bottom_button"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="false" >

                <TextView
                    style="@style/main_page_bottom_text"
                    android:layout_centerInParent="true"
                    android:text="家谱树" />
            </RelativeLayout>

            <ImageView
                style="@style/left_drawer_item_line"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:id="@+id/main_page_bottom_button_questionnairecenter"
                style="@style/main_page_bottom_button"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    style="@style/main_page_bottom_text"
                    android:layout_centerInParent="true"
                    android:id="@+id/connect1"
                    android:text="通讯录" />
            </RelativeLayout>

            <ImageView
                style="@style/left_drawer_item_line"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:id="@+id/main_page_bottom_button_pointshop"
                style="@style/main_page_bottom_button"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    style="@style/main_page_bottom_text"
                    android:layout_centerInParent="true"
                    android:id="@+id/circle1"
                    android:text="家族圈" />
            </RelativeLayout>

            <ImageView
                style="@style/left_drawer_item_line"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <RelativeLayout
                android:id="@+id/main_page_bottom_button_push"
                style="@style/main_page_bottom_button"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    style="@style/main_page_bottom_text"
                    android:layout_centerInParent="true"
                    android:text="我" />
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>




</LinearLayout>
