<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xue2015.myandroidapp.FamilyTreeActivity">

    <!--<include layout="@layout/qcenter_head" />-->
    <com.example.xue2015.myandroidapp.Titlebar
        android:id="@+id/familyTreeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.xue2015.myandroidapp.draw.DrawView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_blue"
            android:text="+"
            android:id="@+id/addFamilyButton"
            android:layout_gravity="right|bottom" />

    </FrameLayout>




</LinearLayout>
